@{
    ViewBag.Title = "All Restaurants I Need to Try";
}
@model IEnumerable<Assign4.Models.Suggestions>

<div>
    <h3>Here are all the restaurants you have suggested</h3>
    <br />
    <table>
        <thead>
            <tr>
                <th>Restaurant Name</th>
                <th>Favorite Dish</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Assign4.Models.Suggestions x in Model)
            { 
                    <tr>
                        <td>@x.RestaurantName</td>
                        <td>@x.FavDish</td>
                        <td>@x.Phone</td>
                    </tr>
            }
        </tbody>
    </table>
</div>
<br />
