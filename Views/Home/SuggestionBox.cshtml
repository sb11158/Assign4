@{
    ViewBag.Title = "Enter Your Favorite Suggestions Here:";
}
@model Assign4.Models.Suggestions
<!--form to add a suggestion-->
<form asp-action="SuggestionBox" method="post">
    <div>
        <label asp-for="Name">Please Enter Your Name:</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="RestaurantName">Name of Restaurant:</label>
        <input asp-for="RestaurantName" />
    </div>
    <div>
        <label asp-for="FavDish">What is your Favorite Dish?:</label>
        <input asp-for="FavDish" />
    </div>
    
    <div>
        <label asp-for="Phone">Restaurant's Phone Number:</label>
        <input asp-for="Phone" />
    </div>
    <button type="submit" >Submit Your Suggestion</button>
</form>
